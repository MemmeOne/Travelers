<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cpkl.admin_mybatis.myMapper">
	<select id="report_infolist" resultType="reportdto" parameterType="map">
		select num,title,content,writer
		from report_post where board='info_board' ORDER BY num asc
	</select>
	<select id="report_matelist" resultType="reportdto" parameterType="map">
		select num,title,content,writer
		from report_post where board='mate_board' ORDER BY num asc
	</select>
	<select id="report_reviewlist" resultType="reportdto" parameterType="map">
		select num,title,content,writer
		from report_post where board='review_board' ORDER BY num asc
	</select>
	<select id="report_freelist" resultType="reportdto" parameterType="map">
		select num,title,content,writer
		from report_post where board='free_board' ORDER BY num asc
	</select>
	<delete id="infodelete_chk_board">
		delete from info_board where num=#{n}
	</delete>
	<delete id="infodelete_chk_comment">
		delete from info_board_comment where numgroup=#{n}
	</delete>
	<delete id="infodelete_chk_reportpost">
		delete from report_post where num=#{n} and board='info_board'
	</delete>
	<delete id="reviewdelete_chk_board">
		delete from review_board where num=#{n}
	</delete>
	<delete id="reviewdelete_chk_comment">
		delete from review_board_comment where numgroup=#{n}
	</delete>
	<delete id="reviewdelete_chk_reportpost">
		delete from report_post where num=#{n} and board='review_board'
	</delete>
	<delete id="freedelete_chk_board">
		delete from free_board where num=#{n}
	</delete>
	<delete id="freedelete_chk_comment">
		delete from free_board_comment where numgroup=#{n}
	</delete>
	<delete id="freedelete_chk_reportpost">
		delete from report_post where num=#{n} and board='free_board'
	</delete>
	<delete id="matedelete_chk_board">
		delete from mate_board where num=#{n}
	</delete>
	<delete id="matedelete_chk_comment">
		delete from mate_board_reply where bnum=#{n}
	</delete>
	<delete id="matedelete_chk_reportpost">
		delete from report_post where num=#{n} and board='mate_board'
	</delete>
	
	<select id="package_list" resultType="packagedto">
		select * from package
	</select>
	
	 <insert id="package_save" parameterType="packagedao">
		insert into package
		(num,title,pay,theme,term,
		start_point,start_date,start_plane,end_point,end_date,end_plane,
		hotel,city,max,count,cut_line,content)
		values 
		(package_seq.nextval,#{title},#{pay},#{theme},#{term},
		#{start_point},#{start_date},#{start_plane},#{end_point},#{end_date},#{end_plane},
		#{hotel},#{city},#{max},#{count},#{cut_line},#{content}) 
	</insert>
	
</mapper>